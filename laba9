#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    double a, b, p, s;
    cout << "a = ";
    cin >> a;
    cout << "b = ";
    cin >> b;
    p = sqrt(a * a + b * b) + a + b;
    s = (a + b)/2;
    cout << "Hypotenuse = " << sqrt(a*a + b*b) << endl;
    cout << "P = " << p << endl;
    cout << "S = " << s << endl;
}
